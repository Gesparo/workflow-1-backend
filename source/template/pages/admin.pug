doctype html
html
  head
    meta(charset="utf-8")
    title Админ-панель
    meta(content="Melnik Maksim" name="author")
    meta(content="Site-portfolio" name="description")
    meta(content="site, portfolio" name="keywords")
    meta(content="width=device-width, initial-scale=1" name="viewport")
    meta(content="ie=edge" http-equiv="x-ua-compatible")
    link(rel="shortcut icon" type="image/ico" href="favicon.ico?v=2")

    link(rel='stylesheet' href='/assets/css/foundation.css')
    link(rel='stylesheet' href='/assets/css/app.css?v=1')
    script(src='/assets/js/foundation.js' defer)
    script(src='/assets/js/app.js?v=1' defer)

    <!--[if lt IE 9]>
    script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
    <![endif]-->

  body.admin-panel
    .admin-header
      h1.admin-header__title.
        Панель администрирования
      .admin-header__link-block
        a.admin-header__link(href='/').
          Вернуться на сайт

    ul.admin-tabs
      each val in ['Tab 1', 'Tab 2', 'Tab 3', 'Tab 4']
        if val == 'Tab 1'
          li.admin-tabs__tab.admin-tabs_active-tab
            .admin-tabs__tab-text= val
        else
          li.admin-tabs__tab
            .admin-tabs__tab-text= val

    .admin-content
      .admin-content__tab-content
        include ../admin_pages/about_me
      .admin-content__tab-content.admin-content_adtive-tab
        include ../admin_pages/blog